@model PatrolInspect.Models.ErrorViewModel
@{
    ViewData["Title"] = "系統錯誤";
}

<div style="text-align: center; padding: 40px;">
    <h1 style="color: #d63031; margin-bottom: 20px;">系統發生錯誤</h1>
    <p style="margin-bottom: 30px; color: #666;">很抱歉，系統遇到了一個問題。請稍後再試或聯繫IT部門。</p>

    @if (Model.ShowRequestId)
    {
        <p style="margin-bottom: 30px; color: #999; font-size: 12px;">
            錯誤代碼: <code>@Model.RequestId</code>
        </p>
    }

    <div>
        <a href="@Url.Action("Login", "Account")" class="btn">返回登入頁面</a>
        <button onclick="history.back()" class="btn btn-secondary" style="margin-left: 10px;">返回上一頁</button>
    </div>
</div>