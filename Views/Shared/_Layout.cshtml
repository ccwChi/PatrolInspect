<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - 家登精密</title>

    <link href="~/lib/bootstrap//dist/css/bootstrap.min.css" rel="stylesheet" />

    @RenderSection("css", required: false)

    <style>
        /* 基本樣式設定 */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            height: 100%;
            font-family: "Microsoft JhengHei", "Segoe UI", "Helvetica Neue", Arial, sans-serif;
        }

        .navbar * {
            font-weight: bold;
            font-size: 18px;
        }

        body {
            display: flex;
            flex-direction: column;
            background-color: #f8f9fa;
        }

        .content-wrapper {
            flex: 1;
            padding: 20px;
        }

        footer {
            text-align: center;
            font-size: small;
            padding: 10px;
            background: #eee;
            color: #666;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg px-2" style="background-color:#0071b2 !important; height:46px">
        <div class="" style="height:100%; width:100%; display:flex; align-items:center; justify-content:space-between">
            <div style="display:flex; height:100%; width:fit-content; padding:0 10px; ">
                <img src="~/images/logo.png" style="height:100%;" alt="Logo" onclick={} />
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarbtn"
                        aria-controls="navbarbtn" aria-expanded="false" aria-label="切換導航">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>

            <!-- 手機版登出按鈕 - 始終顯示 -->
            <div class="d-flex align-items-center">
                <!-- 登出按鈕 - 始終顯示 -->
                <a class="text-white" href="@Url.Action("Logout", "Account")" style="padding: 0;">
                    <span style="color:white; text-decoration:none">登出</span>
                </a>
            </div>

            <!-- 原本的摺疊選單 - 桌面版使用 -->
            <div class="collapse navbar-collapse d-none d-lg-block" id="navbarbtn">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            項目
                        </a>
                        <ul class="dropdown-menu dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="@Url.Action("Index", "Inspection")">巡檢系統</a></li>
                        </ul>
                    </li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("CheckLoginStatus", "Account")">
                            <i class="fa-solid fa-user"></i>
                            @if (!string.IsNullOrEmpty(ViewContext.HttpContext.Session.GetString("UserName")))
                            {
                                <span>@ViewContext.HttpContext.Session.GetString("UserName")</span>
                            }
                            else
                            {
                                <span>未登入</span>
                            }
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" href="@Url.Action("Logout", "Account")">
                            <i class="fa-solid fa-right-from-bracket"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="content-wrapper container">
        @RenderBody()
    </main>

    <footer>
        Copyright © 2025 Gudeng Industrial Corp. All Rights Reserved.
    </footer>

    <!-- JavaScript 放在這裡 -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>