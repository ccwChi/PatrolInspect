<script>
document.addEventListener('DOMContentLoaded', function () {
    // 初始化 tooltip
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    const tooltipMap = new Map();

    tooltipTriggerList.forEach(function (el) {
        const tooltip = new bootstrap.Tooltip(el, {
            trigger: 'manual', // 改為手動控制
            html: true,
            boundary: 'window',
            placement: 'auto'
        });
        tooltipMap.set(el, tooltip);

        let hoverTimeout = null;

        // ===  Hover 功能 ===
        el.addEventListener('mouseenter', function () {
            // 只有在未被 click 鎖定時才顯示 hover tooltip
            if (!el.classList.contains('tooltip-locked')) {
                hoverTimeout = setTimeout(() => tooltip.show(), 100);
            }
        });

        el.addEventListener('mouseleave', function () {
            clearTimeout(hoverTimeout);
            // 只有未被鎖定的才關閉
            if (!el.classList.contains('tooltip-locked')) {
                tooltip.hide();
            }
        });

        // ===  Click 鎖定開關 ===
        el.addEventListener('click', function (e) {
            e.stopPropagation(); // 防止冒泡

            // 先關閉其他 tooltip
            tooltipMap.forEach((t, elem) => {
                if (elem !== el) {
                    t.hide();
                    elem.classList.remove('tooltip-locked');
                }
            });

            // 切換當前 tooltip 鎖定狀態
            if (el.classList.contains('tooltip-locked')) {
                el.classList.remove('tooltip-locked');
                tooltip.hide();
            } else {
                el.classList.add('tooltip-locked');
                tooltip.show();
            }
        });
    });

    // ===  點擊背景區域時關閉所有 tooltip ===
    document.addEventListener('click', function () {
        tooltipMap.forEach((t, elem) => {
            t.hide();
            elem.classList.remove('tooltip-locked');
        });
    });

    // === 自動刷新（5分鐘）===
    setInterval(function() {
        location.reload();
    }, 5 * 60 * 1000);
});

