@model PatrolInspect.Models.ActivityChartViewModel
@{
    Layout = null;
    var colorMap = new Dictionary<string, string>
    {
        { "製一巡檢", "#3b82f6" },
        { "機邊檢驗", "#10b981" },
        { "入庫檢驗", "#f59e0b" },
        { "會議", "#a855f7" },
        { "支援其他單位", "#ef4444" },
        { "基恩斯量測", "#6366f1" },
        { "全檢", "#14b8a6" },
        { "限樣", "#94a3b8" },
    };

    var validTypes = ViewBag.ValidWorkingHoursTypes as List<string> ?? new List<string>();
    
    // 顯示範圍：7:00 ~ 8:00（25小時）
    var displayStart = ViewBag.DisplayStart as DateTime? ?? DateTime.Today.AddHours(7);
    var displayEnd = ViewBag.DisplayEnd as DateTime? ?? DateTime.Today.AddDays(1).AddHours(8);
    var totalDisplayMinutes = (displayEnd - displayStart).TotalMinutes;
    
    var workdayStart = ViewBag.WorkdayStart as DateTime? ?? DateTime.Today.AddHours(8);
    var workdayEnd = ViewBag.WorkdayEnd as DateTime? ?? DateTime.Today.AddDays(1).AddHours(8);
    
    var nextDay = displayStart.AddDays(1);
}

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>人員巡檢稼動表</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-size: clamp(14px, 1vw, 20px);
        }

        html, body {
            height: 100%;
            font-family: "Microsoft JhengHei", "Segoe UI", "Helvetica Neue", Arial, sans-serif;
        }

        p {
            margin: 0;
            padding: 2px 0;
        }

        ol, ul {
            margin: 0;
            padding-left: 1.25rem;
        }

        body {
            display: flex;
            flex-direction: column;
            background-color: #f8f9fa;
        }

        .content-wrapper {
            flex: 1;
            padding: 20px 20px;
        }

        .tooltip-inner {
            overflow-y: auto;
            text-align: left;
            white-space: normal;
            width: fit-content; /* 改這行 */
            max-width: 500px; /* 加這行，設定最大寬度 */
            min-width: 280px;
            max-height: 100vh;
            background-color: rgba(0, 0, 0, 0.9);
            color: #f8fafc;
            font-size: clamp(14px, 1vw, 20px);
            line-height: 1.6;
            padding: 10px 12px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.3);
        }


        footer {
            text-align: center;
            font-size: small;
            padding: 10px;
            background: #eee;
            color: #666;
        }
    </style>
</head>
<body>
    <main class="content-wrapper">
        <div style="display:flex; flex-direction:column; padding:20px">
            @if (TempData["ErrorMessage"] != null)
            {
                <div style="background-color: #ffcccc; border: 1px solid #ff0000; padding: 10px; margin-bottom: 10px;">
                    @TempData["ErrorMessage"]
                </div>
            }

            <div style="margin-bottom: 20px; display:flex; align-items:center; gap:20px">
                <h3 style="margin:0">人員巡檢稼動表</h3>
                <form method="get" style="">
                    <input type="date" name="date"
                           value="@(Model?.SelectedDate.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))"
                           style="padding: 5px; margin-right: 10px;" />
                    <button type="submit" style="padding: 5px 15px; background-color: #0071b2; color: white; border: none; cursor: pointer;">查詢</button>
                </form>
            </div>

            <div style="padding: 15px; display:flex; align-items:center; justify-content:space-between; width:100%;">
                <div>
                    <strong>有效工時統計項目：</strong>
                    @foreach (var type in validTypes)
                    {
                        <span style="margin-left: 10px; color: #0071b2;">@type</span>
                    }
                </div>
                <div>
                    @foreach (var item in colorMap)
                    {
                        <span style="margin-left: 30px;">
                            <span style="display: inline-block; width: 20px; height: 20px; background-color: @item.Value; vertical-align: middle; margin-right: 5px;"></span>
                            @(item.Key switch {
                                "會議" => "會議、主管交派",
                                "支援其他單位" => "支援其他單位",
                                "基恩斯量測" => "基恩斯、三次元量測",
                                "三次元量測" => "基恩斯、三次元量測",
                                _ => item.Key
                            })
                        </span>
                    }
                </div>
            </div>

            @if (Model == null)
            {
                <div style="background-color: #ffcccc; border: 1px solid #ff0000; padding: 10px;">
                    系統發生錯誤，無法載入資料
                </div>
            }
            else if (Model.UserActivities == null || Model.UserActivities.Count == 0)
            {
                <div style="background-color: #ffffcc; border: 1px solid #cccc00; padding: 10px;">
                    該日期無巡檢記錄
                </div>
            }
            else
            {
                <div style="">
                    <table style="width: 100%; border-collapse: collapse; border: 1px solid #999;">
                        <thead>
                            <tr style="background-color: #e0e0e0;">
                                <th style="border: 1px solid #999; padding: 10px; width: 170px; text-align: left;">人員</th>
                                <th style="border: 1px solid #999; padding: 10px; text-align: left;">
                                    時間軸 (@displayStart.ToString("MM/dd HH:mm") ~ @displayEnd.ToString("MM/dd HH:mm"))
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.UserActivities)
                            {
                                <tr>
                                    <td style="border: 1px solid #999; padding: 10px; vertical-align: middle;">
                                        <strong>@user.UserName</strong>
                                        <span style="color: #666; font-size: 12px;"> (@user.UserNo)</span><br />
                                        @*<span style="color: @(user.ValidWorkingMinutes >= 480 ? "#10b981" : user.ValidWorkingMinutes >= 360 ? "#f59e0b" : "#ef4444"); font-size: 13px; font-weight: bold;">*@
                                        <span style="color: black; font-size: 13px; font-weight: bold;">
                                            有效工時: @user.ValidWorkingMinutes.ToString("F0") / @user.TotalWorkingMinutes 分鐘
                                        </span>
                                        <span style="color: black; font-size: 13px; font-weight: bold;">
                                            人員效率: @((user.TotalWorkingMinutes == 0 ? 0 : user.ValidWorkingMinutes / user.TotalWorkingMinutes * 100).ToString("F2")) %
                                        </span>
                                    </td>
                                    <td style="border: 1px solid #999; padding: 0; position: relative;">
                                        <div style="position: relative; height: 80px; background-color: #f8f8f8; padding-top: 20px;">
                                            
                                            @* 日期標籤 *@
                                            @*<div style="position: absolute; left: 0%; top: 0; font-size: 12px; font-weight: bold; color: #333; background: #fff; padding: 2px 5px; border: 1px solid #999;">
                                                @displayStart.ToString("MM/dd")
                                            </div>*@
                                            <div style="position: absolute; left: 68%; top: 0; font-size: 12px; font-weight: bold; color: #333; background: #fff; padding: 2px 5px; border: 1px solid #999;">
                                                @nextDay.ToString("MM/dd")
                                            </div>

                                            @* 時間刻度：8, 11, 14, 17, 20, 23, 2, 5, 8（從8點開始，但位置從7點算起）*@
                                            @{
                                                var timeMarks = new[] { 8, 11, 14, 17, 20, 23, 2, 5, 8 };
                                                var timePositions = new[] { 1, 4, 7, 10, 13, 16, 19, 22, 25 }; // 相對於7:00的小時數
    
                                                for (int i = 0; i < timeMarks.Length; i++)
                                                {
                                                    var hour = timeMarks[i];
                                                    var position = (timePositions[i] / 25.0 * 100); // 25小時
        
                                                    <div style="position: absolute; left: @position.ToString("F2")%; top: 20px; bottom: 0; width: 1px; background-color: #ccc;">
                                                        <span style="position: absolute; top: -18px; left: -10px; font-size: 11px; color: #666;">@hour:00</span>
                                                    </div>
                                                }
                                            }

                                            @* 活動條 *@
                                            @foreach (var activity in user.Activities)
                                            {
                                                // 截斷活動到顯示範圍
                                                var activityStart = activity.ArriveAt < displayStart ? displayStart : activity.ArriveAt;
                                                var activityEnd = activity.SubmitDataAt.HasValue 
                                                    ? (activity.SubmitDataAt.Value > displayEnd ? displayEnd : activity.SubmitDataAt.Value)
                                                    : DateTime.Now;
                                                
                                                if (activityEnd > displayEnd) activityEnd = displayEnd;
                                                if (activityStart >= displayEnd) continue; // 完全超出範圍的不顯示
                                                
                                                // 計算相對於顯示起點(7:00)的位置
                                                var totalMinutesFromStart = (activityStart - displayStart).TotalMinutes;
                                                var leftPosition = (totalMinutesFromStart / totalDisplayMinutes) * 100;
                                                
                                                var durationMinutes = (activityEnd - activityStart).TotalMinutes;
                                                var width = Math.Max((durationMinutes / totalDisplayMinutes) * 100, 0.5);
                                                
                                                var bgColor = colorMap.ContainsKey(activity.InspectType) ? colorMap[activity.InspectType] : "#808080";
                                                var originalDuration = activity.SubmitDataAt.HasValue ? (activity.SubmitDataAt.Value - activity.ArriveAt).TotalMinutes.ToString("F0") : "-";
                                                var tooltipText = $"<strong>{activity.InspectType}</strong><br>區域: {activity.Area}<br>設備: {activity.DeviceId}<br>工單: {activity.InspectWo}<br>開始: {activity.ArriveAt:MM/dd HH:mm:ss}<br>結束: {(activity.SubmitDataAt?.ToString("MM/dd HH:mm:ss") ?? "進行中")}<br>時長: {originalDuration} 分";

                                                <div style="position: absolute;
                                                    left: @leftPosition.ToString("F2")%;
                                                    width: @width.ToString("F2")%;
                                                    top: 35px;
                                                    height: 30px;
                                                    background-color: @bgColor;
                                                    cursor: pointer;"
                                                     class="tooltip-activity"
                                                     data-bs-toggle="tooltip"
                                                     data-bs-html="true"
                                                     data-bs-placement="auto"
                                                     data-bs-title="@tooltipText">
                                                </div>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div style="margin-top: 40px;">
                    <h5>詳細記錄</h5>
                    <div style="overflow-x: auto;">
                        <table style="width: 100%; border-collapse: collapse; border: 1px solid #999;">
                            <thead>
                                <tr style="background-color: #e0e0e0;">
                                    <th style="border: 1px solid #999; padding: 8px;">人員</th>
                                    <th style="border: 1px solid #999; padding: 8px;">檢驗類型</th>
                                    <th style="border: 1px solid #999; padding: 8px;">區域</th>
                                    <th style="border: 1px solid #999; padding: 8px;">設備</th>
                                    <th style="border: 1px solid #999; padding: 8px;">工單</th>
                                    <th style="border: 1px solid #999; padding: 8px;">開始時間</th>
                                    <th style="border: 1px solid #999; padding: 8px;">結束時間</th>
                                    <th style="border: 1px solid #999; padding: 8px;">時長(分)</th>
                                    <th style="border: 1px solid #999; padding: 8px;">檢驗OK數</th>
                                    <th style="border: 1px solid #999; padding: 8px;">檢驗NG數</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.UserActivities)
                                {
                                    foreach (var activity in user.Activities)
                                    {
                                        var duration = activity.SubmitDataAt.HasValue ? (activity.SubmitDataAt.Value - activity.ArriveAt).TotalMinutes : 0;
                                        var bgColor = colorMap.ContainsKey(activity.InspectType) ? colorMap[activity.InspectType] : "#808080";

                                        <tr>
                                            <td style="border: 1px solid #999; padding: 8px;">@user.UserName</td>
                                            <td style="border: 1px solid #999; padding: 8px;">
                                                <span style="background-color: @bgColor; color: #fff; padding: 4px 8px; font-size: 12px; display: inline-block;">
                                                    @activity.InspectType
                                                </span>
                                            </td>
                                            <td style="border: 1px solid #999; padding: 8px;">@activity.Area</td>
                                            <td style="border: 1px solid #999; padding: 8px;">@activity.DeviceId</td>
                                            <td style="border: 1px solid #999; padding: 8px;">@activity.InspectWo</td>
                                            <td style="border: 1px solid #999; padding: 8px;">@activity.ArriveAt.ToString("MM/dd HH:mm:ss")</td>
                                            <td style="border: 1px solid #999; padding: 8px;">@(activity.SubmitDataAt?.ToString("MM/dd HH:mm:ss") ?? "進行中")</td>
                                            <td style="border: 1px solid #999; padding: 8px;">@(duration > 0 ? duration.ToString("F0") : "-")</td>
                                            <td style="border: 1px solid #999; padding: 8px;">@(activity.InspectItemOkNo)</td>
                                            <td style="border: 1px solid #999; padding: 8px;">@(activity.InspectItemNgNo)</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </main>

    <footer>
        Copyright © 2025 Gudeng Industrial Corp. All Rights Reserved.
    </footer>

