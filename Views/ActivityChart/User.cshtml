@model PatrolInspect.Models.ActivityChartViewModel
@{
    Layout = null;
    var colorMap = new Dictionary<string, string>
    {
        { "製一巡檢", "#3b82f6" },
        { "機邊檢驗", "#10b981" },
        { "基恩斯量測", "#6366f1" },
        { "三次元量測", "#6366f1" },
        { "入庫檢驗", "#f59e0b" },
        { "全檢", "#14b8a6" },
        { "限樣", "#94a3b8" },
        { "會議", "#a855f7" },
        { "支援其他單位", "#ef4444" },
    };

    // 按「越具體越前面」排序，先比對關鍵字（子字串）再 fallback 到精準對應
    var colorRules = new List<(string key, string color)>
    {
        ("製一巡檢",   colorMap["製一巡檢"]),
        ("機邊檢驗",   colorMap["機邊檢驗"]),
        ("基恩斯",     colorMap["基恩斯量測"]),
        ("三次元",     colorMap["三次元量測"]),
        ("入庫檢驗",   colorMap["入庫檢驗"]),
        ("全檢",       colorMap["全檢"]),
        ("限樣",       colorMap["限樣"]),
        ("會議",       colorMap["會議"]),
        ("支援",       colorMap["支援其他單位"]), // 任何包含「支援」的，都用同色
    };

    Func<string, string> resolveColor = (text) =>
{
    if (string.IsNullOrWhiteSpace(text)) return "#808080";
    var t = text.Trim();

    // 子字串（不分大小寫）匹配
    foreach (var rule in colorRules)
    {
        if (t.IndexOf(rule.key, StringComparison.OrdinalIgnoreCase) >= 0)
            return rule.color;
    }

    // 找不到就嘗試精準對應
    return colorMap.TryGetValue(t, out var exact) ? exact : "#808080";
    };

    var validTypes = ViewBag.ValidWorkingHoursTypes as List<string> ?? new List<string>();
    
    // 顯示範圍：7:00 ~ 8:00（25小時）
    var displayStart = ViewBag.DisplayStart as DateTime? ?? DateTime.Today.AddHours(7);
    var displayEnd = ViewBag.DisplayEnd as DateTime? ?? DateTime.Today.AddDays(1).AddHours(8);
    var totalDisplayMinutes = (displayEnd - displayStart).TotalMinutes;
    
    var workdayStart = ViewBag.WorkdayStart as DateTime? ?? DateTime.Today.AddHours(8);
    var workdayEnd = ViewBag.WorkdayEnd as DateTime? ?? DateTime.Today.AddDays(1).AddHours(8);
    
    var nextDay = displayStart.AddDays(1);
}

