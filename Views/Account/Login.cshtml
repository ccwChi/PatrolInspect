@model PatrolInspect.Models.LoginViewModel

@{
    ViewData["Title"] = "登入 - MES 巡檢系統";
    Layout = "_Layout";
}

@section css {
    <style>
        .login-container {
            background: white;
            border-radius: 12px;
            padding: 40px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        .system-title {
            color: #333;
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 8px;
        }

        .system-subtitle {
            color: #666;
            font-size: 14px;
            margin-bottom: 30px;
        }

        .input-group {
            margin-bottom: 25px;
            text-align: left;
        }

        .input-label {
            display: block;
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
            font-size: 16px;
        }

        .user-input {
            width: 100%;
            padding: 15px;
            border: 2px solid #e1e5e9;
            border-radius: 8px;
            font-size: 18px;
            font-weight: 500;
            text-align: center;
            letter-spacing: 1px;
            transition: border-color 0.3s ease;
        }

            .user-input:focus {
                outline: none;
            }

        .submit-btn {
            width: 100%;
            border: none;
            padding: 15px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 10px;
        }

            .submit-btn:hover:not(:disabled) {
                transform: translateY(-2px);
            }

            .submit-btn:disabled {
                background: #ccc;
                cursor: not-allowed;
                transform: none;
                box-shadow: none;
            }

        .alert {
            padding: 12px;
            border-radius: 6px;
            margin-bottom: 20px;
            font-size: 14px;
            display: none;
        }

        .alert-error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        .loading-spinner {
            display: inline-block;
            width: 16px;
            height: 16px;
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top-color: white;
            animation: spin 1s linear infinite;
            margin-right: 8px;
        }

        @@keyframes spin {
            to

        {
            transform: rotate(360deg);
        }

        }

        .system-info {
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid #eee;
            font-size: 12px;
            color: #999;
        }

        /* 手機版優化 */
        @@media (max-width: 480px) {
            .login-container

        {
            margin: 20px;
            padding: 30px 25px;
        }

        .user-input {
            font-size: 20px;
            padding: 18px;
        }

        }
    </style>
}


    <h1 class="system-title">巡檢系統</h1>


    <div id="alertMessage" class="alert"></div>

    <form id="loginForm">
        <div class="input-group">
            <label for="userNo" class="input-label">請輸入工號</label>
            <input type="text"
                   id="userNo"
                   name="userNo"
                   class="user-input"
                   placeholder="工號"
                   required
                   maxlength="20"
                   autocomplete="username"
                   autofocus>
        </div>

        <button type="submit" class="submit-btn" id="submitBtn">
            <span id="btnText">開始巡檢</span>
        </button>
    </form>



@section scripts {
    <script>
        $(document).ready(function() {
            $('#userNo').focus();

            $('#loginForm').on('submit', function(e) {
                e.preventDefault();

                const userNo = $('#userNo').val().trim();

                if (!userNo) {
                    showAlert('error', '請輸入工號');
                    $('#userNo').focus();
                    return;
                }

                setLoading(true);
                hideAlert();

                $.ajax({
                    url: '@Url.Action("Login", "Account")',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ UserNo: userNo }),
                    timeout: 10000, // 10秒超時
                    success: function(response) {
                        console.log('Login response:', response);

                        if (response.success) {
                            showAlert('success', '登入成功，正在跳轉...');

                            setTimeout(function() {
                                window.location.href = response.redirectUrl;
                            }, 1000);
                        } else {
                            showAlert('error', response.message || '登入失敗');
                            setLoading(false);
                            $('#userNo').focus().select();
                        }
                    },
                    error: function(xhr, status, error) {
                        console.error('Login error:', {
                            status: xhr.status,
                            statusText: xhr.statusText,
                            error: error
                        });

                        let errorMessage = '登入失敗，請重新嘗試';

                        if (status === 'timeout') {
                            errorMessage = '連線超時，請檢查網路連線';
                        } else if (xhr.status === 500) {
                            errorMessage = '伺服器錯誤，請聯繫IT部門';
                        } else if (xhr.status === 404) {
                            errorMessage = '找不到登入服務，請聯繫IT部門';
                        }

                        showAlert('error', errorMessage);
                        setLoading(false);
                        $('#userNo').focus();
                    }
                });
            });

            $('#userNo').on('keypress', function(e) {
                if (e.which === 13) $('#loginForm').submit();
            }).on('input', function() {
                $(this).val($(this).val().toUpperCase());
            });

            function setLoading(loading) {
                $('#submitBtn').prop('disabled', loading);
                $('#btnText').html(loading ? '<span class="loading-spinner"></span>登入中...' : '開始巡檢');
            }

            function showAlert(type, message) {
                $('#alertMessage').removeClass('alert-error alert-success').addClass('alert-' + type).text(message).show();
            }

            function hideAlert() {
                $('#alertMessage').hide();
            }
        });
    </script>
}